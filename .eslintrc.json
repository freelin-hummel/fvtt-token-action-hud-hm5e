{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "globals": {
        "game": "readonly",
        "canvas": "readonly",
        "Hooks": "readonly",
        "ChatMessage": "readonly"
    },
    "rules": {
        "indent": ["error", 4]
    },
    "ignorePatterns": ["*.min.js"]
}
